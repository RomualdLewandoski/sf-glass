{% extends 'baseAdmin.html.twig' %}

{% block bodyContent %}
    <h1>Partners</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ partner.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ partner.name }}</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td>
                <div class="attachment-info border-0">
                    <div class="thumbnail thumbnail-image">
                        <img src="{{ vich_uploader_asset(partner.logo, 'imageFile') }}" draggable="false" alt="{{ partner.logo.name }}" id="imgThumb">
                    </div>
                </div>
            </td>
        </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6 text-right ">
            <a href="{{ path('partners_edit', {'id': partner.id}) }}" class="btn btn-warning btn-lg">edit</a>
        </div>
        <div class="col-md-6 text-left">
            <form method="post" action="{{ path('partners_delete', {'id': partner.id}) }}"
                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partner.id) }}">
                <button class="btn btn-lg btn-danger">Delete</button>
            </form>

        </div>
        <a href="{{ path('partners_index') }}"><i class="fa fa-arrow-left"></i> back to list</a>
    </div>

{% endblock %}
