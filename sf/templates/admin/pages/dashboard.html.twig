{% extends 'baseAdmin.html.twig' %}

{% block bodyContent %}
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>

        </ol>
    </section>

    <div class="dashboard1">
        <div class="row">
            <div class="col-xl-3 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg1">
                        <div class="text-white text-center">
                            <i class="fa fa-user-o fa-2x"></i>
                            <div class="mt-2">Inscrits</div>
                            <h3 class="mt-1 count">{{ users|length }}</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg2">
                        <div class="text-center text-white">
                            <i class="fa fa-money fa-2x"></i>
                            <div class="mt-2">Total des gains</div>
                            <div class="money"><h3 class="mt-1 count">
                                    {% set total = 0 %}
                                    {% for order in orders %}
                                        {% set total = total + order.price %}
                                    {% endfor %}
                                    {{ total }}
                                </h3>
                                <h3> $</h3></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-6 col-12">
                <div class="counter-box">
                    <div class="shadow bg4">
                        <div class="text-center text-white">
                            <i class="fa fa-opencart fa-2x"></i>
                            <div class="mt-2">Nombre de commandes</div>
                            <h3 class="mt-1 count">{{ orders|length }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Counters Section Ends -->

    </div>
{% endblock %}