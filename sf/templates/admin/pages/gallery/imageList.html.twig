{% extends 'baseAdmin.html.twig' %}


{% block bodyContent %}

    <div id="myOverlay" class="overlay">
        <span class="closebtn" onclick="closeSearch()" title="Close Overlay">Ã—</span>
        <div class="overlay-content">
            <img src="" id="overlayBlock" width="80%">
        </div>
    </div>


    <div class=" row el-element-overlay">
        <div class="col-md-8 row">
            {% for image in images %}
                <div class="col-lg-3 col-md-6">
                    <div class="card">
                        <div class="el-card-item">
                            <div class="el-card-avatar el-overlay-1"><img
                                        src="{{ vich_uploader_asset(image, 'imageFile') }}"
                                        alt="user" class="show">
                            </div>
                            <div class="el-card-content">
                                <h3 class="box-title">{{ image.name }}</h3>
                                <div class="text-center">
                                    <form method="post" action="{{ path('image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form></div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}

        </div>
        <div class="col-md-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
            <script>
                $(document).ready(function () {
                    $('.show').click(function (){
                        var imgSrc = $(this).attr('src');
                        $('#overlayBlock').attr('src', imgSrc);
                        $('#myOverlay').fadeIn()
                    })
                    $('input[type="file"]').change(function(e){
                        var fileName = e.target.files[0].name;
                        $('.custom-file-label').html(fileName);
                    });
                })

                function closeSearch() {
                    $('#myOverlay').fadeOut()
                }

            </script>
        </div>
    </div>


{% endblock %}
