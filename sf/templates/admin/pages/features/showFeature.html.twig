{% extends 'baseAdmin.html.twig' %}

{% block bodyContent %}
<section class="content-header">
    <h1>
        Gestion Features
        <small>Lecture feature</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
        <li><a href="#">Gestion site</a></li>
        <li class="active">Lecture feature</li>
    </ol>
</section>
<div class="dashboard1">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feature.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ feature.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ feature.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ feature.description|raw }}</td>
            </tr>
        <tr>
            <th>image</th>
            <td>
                <div class="attachment-info border-0">
                    <div class="thumbnail thumbnail-image">
                        <img src="{{ vich_uploader_asset(feature.img, 'imageFile') }}" draggable="false" alt="{{ feature.img.name }}" id="imgThumb">
                    </div>
                </div>
            </td>
        </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6 text-right ">
            <a href="{{ path('features_edit', {'id': feature.id}) }}" class="btn btn-warning btn-lg">edit</a>
        </div>
        <div class="col-md-6 text-left">
            <form method="post" action="{{ path('features_delete', {'id': feature.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feature.id) }}">
                <button class="btn btn-lg btn-danger">Delete</button>
            </form>

        </div>
        <a href="{{ path('features_index') }}"><i class="fa fa-arrow-left"></i> back to list</a>
    </div>
</div>

{% endblock %}
