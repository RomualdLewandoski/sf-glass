{% extends 'baseAdmin.html.twig' %}

{% block bodyContent %}
    <section class="content-header">
        <h1>
            Gestion Features
            <small>Liste des features</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li><a href="#">Gestion site</a></li>
            <li class="active">Liste des features</li>
        </ol>
    </section>
    <div class="dashboard1">
        <div class="row">
            <div class="col-md-12 text-right">
                <a href="{{ path('features_new') }}" class="btn btn-sm btn-success">Create new</a>
            </div>
        </div>
        <div class="col-md-12 table-responsive">

            <table class="table mt-4">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Slug</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for feature in features %}
                    <tr>
                        <td>{{ feature.id }}</td>
                        <td>{{ feature.titre }}</td>
                        <td>{{ feature.slug }}</td>
                        <td>{{ feature.description }}</td>
                        <td>
                            <a href="{{ path('features_show', {'id': feature.id}) }}" class="btn btn-primary btn-sm">show</a>
                            <a href="{{ path('features_edit', {'id': feature.id}) }}" class="btn btn-warning btn-sm">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
