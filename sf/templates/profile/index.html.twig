{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row mt-4">

            <div class="mbr-col-lg-2 mbr-col-md-4 mbr-col-sm-12 md-pb">
                <h3 class="mbr-section-subtitle mbr-fonts-style mbr-pb-2 align-left display-4"><strong>Mon
                        Profil</strong>
                </h3>
                <div class="item">

                    <a href="{{ path('profile') }}"><p class="mbr-fonts-style mbr-text align-left display-4"><strong>Mes
                                commandes</strong></p></a>
                </div>
                <div class="item">

                    <a href="{{ path('profile_address_list') }}"><p
                                class="mbr-fonts-style mbr-text align-left display-4">Mes addresses</p></a>
                </div>
                <div class="item">

                    <a href="{{ path('profile_informations') }}"><p
                                class="mbr-fonts-style mbr-text align-left display-4">Mes informations</p>
                    </a>
                </div>
            </div>

            <div class="col-md-8 pl-5">
                <h3 class="mbr-section-subtitle mbr-fonts-style mbr-pb-2 align-center display-4 mb-4"><strong>Mes
                        Commandes</strong>
                </h3>
                <table class="shop_table ">
                    <thead>
                    <th>Date</th>
                    <th>Prix</th>
                    <th>Status</th>
                    <th>Action</th>
                    </thead>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.date|date("d/m/yyyy à H:i") }}</td>
                            <td>{{ order.price }} €</td>
                            <td>
                                {% if order.status == 0 %}
                                    En attente
                                {% elseif order.status == 1 %}
                                    En préparation
                                {% elseif order.status == 2 %}
                                    En transit
                                {% elseif order.status == 3%}
                                    Terminée
                                {% endif %}
                            </td>
                            <td><a href="#" class="btn btn-primary btn-sm">Détails </a></td>
                        </tr>
                    {% else %}
                        Vous n'avez aucune commande actuellement
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>
{% endblock %}
